<%= form_for @stamp, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :card_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :card_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :initials, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :initials, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :note, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :note, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :duration, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :duration, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :completed_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :completed_at, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tags, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tags, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stamps_path, :class => 'btn' %>
  </div>
<% end %>
