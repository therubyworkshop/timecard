<%= form_for @card, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group <%= "error" if f.error_message_on(:name).present? %>">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field', required: true %>
      <%= f.error_message_on :name, html_tag: :span, css_class: "help-inline" %>
    </div>
  </div>

  <div class="control-group <%= "error" if f.error_message_on(:rate).present? %>">
    <%= f.label :rate, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rate, :class => 'text_field' %>
      <%= f.error_message_on :rate, html_tag: :span, css_class: "help-inline" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Save Card", :class => 'btn btn-primary' %>
    <%= link_to "Cancel", cards_path, :class => 'btn' %>
  </div>
<% end %>
